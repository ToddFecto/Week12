
@{
    ViewData["Title"] = "NewDeck";
}

<div class="text-center">
    <h3 class="display-4">12 Card Deck With Aces, 2s, and Kings</h3>
</div>

@model CardDeck
@{
    ViewData["Title"] = "Home Page";
    string hand = Poker.GetHand(Model.cards);
}

<div>
    Deck ID: @Model.deck_id<br />
    Cards Remaining: @Model.remaining
</div>

<a href="/home/APartialDeck?deck_id=@Model.deck_id" class="btn btn-primary">Draw 1</a>
<br />

@if (Model.remaining >= 0)
{
    <a href="/home/index/Reshuffle/?deck_id=@Model.deck_id" class="btn btn-primary">Reshuffle Deck</a>
}
<br />

@if (Model.remaining == 0)
{
<a href="/home/APartialDeck?deck_id=@Model.deck_id" class="btn btn-primary">Start Over</a>
}
<br />


@if (hand != null)
{
    <div>Congratulations! You grabbed a 12 Card Deck and drew a @hand</div>
}

@foreach (Draw card in Model.cards)
{
    <img src="@card.image" />
}
